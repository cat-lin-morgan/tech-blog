
{{!-- signup html stuff here  --}}
<div class="login-wrapper mt-3">
    <form id="signup-form">

      <div class="form-group row">
        <label for="username-signup" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="username-signup" value="">
        </div>
      </div>

      <div class="form-group row">
        <label for="password-signup" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password-signup">
        </div>
      </div>

        <div>
            <button class="btn btn-primary" type="submit">Signup</button>
            <a class="btn btn-outline-primary" href="/login">Log In!</a>
        </div>
    </form>
</div>


<script src="/javascript/signup.js"></script>
