
<section>
  <a class="btn btn-outline-primary back2dashboard" href="/dashboard"> &larr; Back to dashboard</a>
    <div class="card border-dark mt-3 mb-3" style="max-width: 18rem;">
        <div class="card-header"><h2>Edit Post</h2></div>

        <div class="card-body text-dark">
            <div class="card-text">
                <form class="edit-post-form">
                    <div>
                        <label for="post-title">Title</label>
                        <input type="text" id="post-title" name="post-title"  value="{{post.title}}"/>
                    </div>
                    <div>
                        <label for="post-text">Post</label>
                        <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
                    </div>
                    <div>
                    <div>
                        This is by you on {{format_date post.createdAt}}

                        {{!-- <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a> --}}
                    </div>
                    </div>
                    <button class="btn btn-outline-primary" type="submit">Save post</button>
                    <button type="button" class=" btn btn-outline-primary delete-post-btn">Delete post</button>
                </form>
            </div>
        </div>
    </div>
</section>



<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>

