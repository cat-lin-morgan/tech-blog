{{!-- login html stuff here  --}}
<div class="login-wrapper mt-3">
    <form id="login-form">
        <div class="form-group row">
            <label for="username-login" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username-login" value="">
            </div>
        </div>

        <div class="form-group row">
            <label for="password-login" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password-login">
            </div>
        </div>

        <div>
            <button class="btn btn-primary" type="submit">Login</button>
            <a class="btn btn-outline-primary" href="/signup">Sign Up!</a>
        </div>

    </form>
</div>
<script src="/javascript/login.js"></script>

